@page "{id:int}"
@model TravelAgency.Pages.Customers.DetailsModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

@if (Model.Customer != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Customer.Name</h5>
            <p class="card-text">
                <strong>ID:</strong> @Model.Customer.Id<br />
                <strong>Email:</strong> @Model.Customer.Email<br />
                <strong>Number of Bookings:</strong> @Model.Customer.Bookings?.Count
            </p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="Edit" asp-route-id="@Model.Customer.Id" class="btn btn-warning">Edit</a>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
}
else
{
    <div class="alert alert-warning">
        Customer not found.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}