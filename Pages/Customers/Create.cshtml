@page
@model TravelAgency.Pages.Customers.CreateModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create New Customer</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Customer.Name">Name</label>
        <input asp-for="Customer.Name" class="form-control" />
        <span asp-validation-for="Customer.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer.Email">Email</label>
        <input asp-for="Customer.Email" class="form-control" type="email" />
        <span asp-validation-for="Customer.Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>