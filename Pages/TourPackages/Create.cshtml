@page
@model TravelAgency.Pages.TourPackages.CreateModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Create Tour Package";
}

<h1>Create New Tour Package</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="TourPackage.Title">Title</label>
        <input asp-for="TourPackage.Title" class="form-control" />
        <span asp-validation-for="TourPackage.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TourPackage.StartDate">Start Date</label>
        <input asp-for="TourPackage.StartDate" class="form-control" type="date" />
        <span asp-validation-for="TourPackage.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TourPackage.MaxCapacity">Maximum Capacity</label>
        <input asp-for="TourPackage.MaxCapacity" class="form-control" />
        <span asp-validation-for="TourPackage.MaxCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TourPackage.Price">Price per Day</label>
        <input asp-for="TourPackage.Price" class="form-control" type="number" step="0.01" id="priceInput" />
        <span asp-validation-for="TourPackage.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price with 10% Discount (Preview)</label>
        <input type="text" class="form-control" id="discountedPrice" readonly value="@Model.DiscountedPrice.ToString("C")" />
        <small class="form-text text-muted">Discount applied automatically when creating the package</small>
    </div>

    <div class="form-group">
        <label>Total Booking Value (Capacity x Price)</label>
        <input type="text" class="form-control" id="totalValue" readonly value="@Model.TotalBookingValue.ToString("C")" />
        <small class="form-text text-muted">Calculation using Func: package size x daily price</small>
    </div>

    <button type="submit" class="btn btn-primary">Create Package</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        function updateCalculations() {
            var price = parseFloat(document.getElementById('priceInput').value) || 0;
            var capacity = parseInt(document.querySelector('input[name="TourPackage.MaxCapacity"]').value) || 0;

            var discount = price * 0.9;
            document.getElementById('discountedPrice').value = discount.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

            var totalValue = capacity * price;
            document.getElementById('totalValue').value = totalValue.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        }

        document.getElementById('priceInput').addEventListener('input', updateCalculations);
        document.querySelector('input[name="TourPackage.MaxCapacity"]').addEventListener('input', updateCalculations);
    </script>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Please correct the errors in the form.
    </div>
}