@page "{id:int}"
@model TravelAgency.Pages.TourPackages.DeleteModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Delete Tour Package";
}

<h1>Delete Tour Package</h1>

<h3>Are you sure you want to delete this tour package?</h3>

@if (Model.TourPackage != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.TourPackage.Title</h5>
            <p class="card-text">
                <strong>ID:</strong> @Model.TourPackage.Id<br />
                <strong>Start Date:</strong> @Model.TourPackage.StartDate.ToString("dd/MM/yyyy")<br />
                <strong>Maximum Capacity:</strong> @Model.TourPackage.MaxCapacity<br />
                <strong>Price:</strong> @Model.TourPackage.Price.ToString("C")<br />
                <strong>Bookings:</strong> @Model.TourPackage.Bookings?.Count
            </p>
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="TourPackage.Id" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-warning">
        Tour package not found.
    </div>
}